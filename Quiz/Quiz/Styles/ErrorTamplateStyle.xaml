<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ControlTemplate x:Key="errorTemplate">
        <Border BorderBrush="#c42333" CornerRadius="15" BorderThickness="2">
            <Grid>
                <AdornedElementPlaceholder/>
                <TextBlock Text="{Binding [0].ErrorContent}" Foreground="Gray" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0 0 5 0" FontWeight="Light"/>

            </Grid>
        </Border>
    </ControlTemplate>
</ResourceDictionary>